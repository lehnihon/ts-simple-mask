{
  "name": "ts-simple-mask",
  "version": "0.1.3",
  "description": "A simple and versatile way to make text input masks",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/ts-simple-mask.d.ts",
  "main": "./dist/ts-simple-mask.umd.cjs",
  "module": "./dist/ts-simple-mask.js",
  "exports": {
    ".": {
      "import": "./dist/ts-simple-mask.js",
      "require": "./dist/ts-simple-mask.umd.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lehnihon/ts-simple-mask.git"
  },
  "author": "lk-dev",
  "license": "MIT",
  "keywords": [
    "mask",
    "react-mask",
    "react-native-mask",
    "vue-mask",
    "typescript-mask",
    "javascript-mask",
    "typescript",
    "javascript"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "rm -rf dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublish": "npm run build",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^24.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vite-plugin-dts": "4.0.0-beta.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  }
}
